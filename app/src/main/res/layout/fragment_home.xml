<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/br_day"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Home.HomeFragment"
    android:background="@drawable/morning">

    <TextView
        android:id="@+id/tv_xinChao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/black"
        android:text="Good morning!"
        android:textSize="23dp"
        />

    <RelativeLayout
        android:id="@+id/layout_thongso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_xinChao"
        android:layout_marginTop="10dp"
        android:background="@drawable/hop"
        >

        <TextView
            android:id="@+id/tv_spt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số phòng trống"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/tv_sophongtrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_spt"
            android:text="0"
            android:textSize="20dp"
            android:layout_marginLeft="75dp"/>

        <TextView
            android:id="@+id/tv_songuoithue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_spt"
            android:text="0"
            android:textSize="20dp"
            android:layout_marginLeft="150dp"
            android:layout_toRightOf="@+id/tv_spt"
            android:layout_below="@+id/snt"/>

        <TextView
            android:id="@+id/snt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_spt"
            android:text="Số người thuê"
            android:textSize="20dp"
            android:layout_marginLeft="90dp"
            android:layout_toRightOf="@+id/tv_spt" />

        <TextView
            android:id="@+id/tv_sophong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="160dp"
            android:text="0"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sophongtrong"
            android:layout_centerInParent="true"
            android:text="Số phòng"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:background="@drawable/hop"
        android:layout_below="@+id/layout_thongso"
        android:layout_marginTop="25dp"
        >

        <ImageButton
            android:id="@+id/bt_bill"
            android:layout_width="80dp"
            android:layout_height="66dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bill" />

        <ImageButton
            android:id="@+id/bt_HopDong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/bt_bill"
            android:layout_toRightOf="@+id/bt_bill"
            android:background="@drawable/hopdong" />

        <ImageButton
            android:id="@+id/bt_TienCoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/bt_HopDong"
            android:layout_toRightOf="@id/bt_HopDong"
            android:background="@drawable/tien_coc" />

        <TextView
            android:id="@+id/tv_hoadon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_bill"
            android:text="Hóa đơn"
            android:textSize="20dp"
            android:layout_marginLeft="25dp"
            />
        <TextView
            android:id="@+id/tv_hopdong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_bill"
            android:text="Hợp đồng"
            android:textSize="20dp"
            android:layout_marginLeft="55dp"
            android:layout_toEndOf="@+id/tv_hoadon"
            android:layout_toRightOf="@+id/tv_hoadon"
            />
        <TextView
            android:id="@+id/tv_tiencoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_bill"
            android:text="Tiền cọc"
            android:textSize="20dp"
            android:layout_marginLeft="55dp"
            android:layout_toEndOf="@+id/tv_hopdong"
            android:layout_toRightOf="@+id/tv_hopdong"
            />
        <ImageButton
            android:id="@+id/bt_nguoi_thue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nguoi_thue"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="25dp"
            android:layout_below="@+id/tv_hoadon"
            />
        <ImageButton
            android:id="@+id/bt_su_co"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/su_co"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="80dp"
            android:layout_below="@+id/tv_hoadon"
            android:layout_toEndOf="@+id/bt_nguoi_thue"
            android:layout_toRightOf="@+id/bt_nguoi_thue" />
        <ImageButton
            android:id="@+id/bt_so_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/so_no"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="70dp"
            android:layout_below="@+id/tv_hoadon"
            android:layout_toEndOf="@+id/bt_su_co"
            android:layout_toRightOf="@+id/bt_su_co" />
        <TextView
            android:id="@+id/tv_nguoithuephong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_nguoi_thue"
            android:text="Người thuê"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_su_co"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_nguoi_thue"
            android:text="Sự cố"
            android:textSize="20dp"
            android:layout_marginLeft="75dp"
            android:layout_toEndOf="@+id/tv_hoadon"
            android:layout_toRightOf="@+id/tv_hoadon"
            />
        <TextView
            android:id="@+id/tv_so_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_nguoi_thue"
            android:text="Sổ nợ"
            android:textSize="20dp"
            android:layout_marginLeft="70dp"
            android:layout_toEndOf="@+id/tv_hopdong"
            android:layout_toRightOf="@+id/tv_hopdong"
            />

    </RelativeLayout>


</RelativeLayout>