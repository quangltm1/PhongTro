<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_tenphong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên phòng"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/tv_trangthaiphong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trạng thái phòng"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/tv_nguoithuephong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Người thuê phòng"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:padding="8dp"/>

    <Button
        android:id="@+id/btn_taohoadonphong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tạo hóa đơn phòng"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/teal_200"
        android:padding="12dp"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/btn_taotaikhoanphong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tạo tài khoản phòng"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/teal_200"
        android:padding="12dp"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/btn_taohopdongphong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tạo hợp đồng phòng"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/teal_200"
        android:padding="12dp"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/btn_xoaphong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xóa phòng"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/teal_200"
        android:padding="12dp"
        android:layout_margin="8dp"/>
</LinearLayout>
