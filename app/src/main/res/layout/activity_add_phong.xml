<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_Tao_Phong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tạo Phòng"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_tenp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tên Phòng"
        android:textSize="20sp"
        android:textColor="#444444"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_Tao_Phong"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edt_Ten_Phong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nhập tên phòng"
        android:textColor="#BBBBBB"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_tenp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_gia_phong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Giá phòng dự kiến"
        android:textSize="20sp"
        android:textColor="#444444"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_Ten_Phong"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edt_Gia_Phong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Nhập giá phòng"
        android:inputType="number"
        android:textColor="#BBBBBB"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_gia_phong" />

    <TextView
        android:id="@+id/tv_m"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Diện tích (m²)"
        android:textSize="20sp"
        android:textColor="#444444"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_Gia_Phong"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edt_Dien_Tich"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Nhập diện tích"
        android:inputType="number"
        android:textColor="#BBBBBB"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_m" />

    <TextView
        android:id="@+id/tv_coc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tiền đặt cọc"
        android:textSize="20sp"
        android:textColor="#444444"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_Dien_Tich"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edt_Tien_Dat_Coc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Nhập tiền cọc"
        android:inputType="number"
        android:textColor="#BBBBBB"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_coc" />

    <TextView
        android:id="@+id/tvTrangThai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trạng thái "
        android:textSize="20sp"
        android:textColor="#444444"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_Tien_Dat_Coc"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinnerTrangThai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/edt_Tien_Dat_Coc"
        app:layout_constraintStart_toEndOf="@id/tvTrangThai"
        app:layout_constraintEnd_toEndOf="parent"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/tv_mt_phong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mô tả"
        android:textSize="20sp"
        android:textColor="#444444"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/spinnerTrangThai"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/tv_mo_ta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/hop"
        android:textSize="20sp"
        android:hint="Nhập mô tả phòng"
        android:textColor="#BBBBBB"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_mt_phong"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:lines="8"
        android:maxLines="10"
        android:inputType="textMultiLine"
        android:gravity="left|top" />

    <Button
        android:id="@+id/bt_add_phong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Thêm phòng"
        android:textSize="20sp"
        android:background="@drawable/hop"
        app:backgroundTint="@color/teal_200"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_mo_ta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
