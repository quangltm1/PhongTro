<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- EditText cho tên đăng nhập -->
    <EditText
        android:id="@+id/edtTenDangNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên đăng nhập"
        android:inputType="text"
        android:padding="8dp"
        android:layout_marginBottom="16dp"/>

    <!-- EditText cho số điện thoại -->
    <EditText
        android:id="@+id/edtSoDienThoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập số điện thoại"
        android:inputType="phone"
        android:padding="8dp"
        android:layout_marginBottom="16dp"/>

    <!-- EditText cho mật khẩu -->
    <EditText
        android:id="@+id/edtMatKhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mật khẩu"
        android:inputType="textPassword"
        android:padding="8dp"
        android:layout_marginBottom="16dp"/>
    <EditText
        android:id="@+id/edtReMatKhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập lại mật khẩu"
        android:inputType="textPassword"
        android:padding="8dp"
        android:layout_marginBottom="16dp"/>

    <!-- Button "Lưu" để lưu thông tin đã chỉnh sửa -->
    <Button
        android:id="@+id/btnCapNhat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cập nhật"
        android:layout_below="@id/edtReMatKhau"
        />

</LinearLayout>
